{
    "build": [
        {
            "command": "sudo docker build -t glowman554/filething .",
            "directory": "{{service}}"
        }
    ],
    "containers": [
        {
            "name": "filething",
            "image": "glowman554/filething",
            "environment": {
                "SERVER_KEY_PATH": "/etc/letsencrypt/live/filething.toxicfox.de/privkey.pem",
                "SERVER_CERT_PATH": "/etc/letsencrypt/live/filething.toxicfox.de/fullchain.pem",
                "PORT": "443"
            },
            "mounts": {
                "/etc/letsencrypt": "/etc/letsencrypt",
                "{{base}}/data/FileThing/config.json": "/srv/config.json",
                "{{base}}/data/FileThing/data.db": "/srv/data.db"
            },
            "networks": [
                "router"
            ]
        }
    ]
}